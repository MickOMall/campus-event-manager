<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Campus Event Manager</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    input[readonly], textarea[readonly] {
      background-color: #f5f5f5;
      border: none;
      color: #333;
    }
  </style>
</head>
<body>
  <h1>Campus Event Manager</h1>

  <!-- Add Event Form -->
  <h2>Add Event</h2>
  <form action="/events" method="POST">
    <label for="title">Title:</label>
    <input type="text" name="title" id="title" required>

    <label for="date">Date:</label>
    <input type="date" name="date" id="date" required>

    <label for="location">Location:</label>
    <input type="text" name="location" id="location" required>

    <label for="description">Description:</label>
    <textarea name="description" id="description"></textarea>

    <button type="submit">Add Event</button>
  </form>

  <!-- Sort Options -->
  <h2>Sort Events</h2>
  <form method="GET" action="/">
    <label for="sort">Sort by:</label>
    <select name="sort" id="sort" onchange="this.form.submit()">
      <option value="createdAt" <% if (!currentSort || currentSort === 'createdAt') { %>selected<% } %>>Order Entered</option>
      <option value="date" <% if (currentSort === 'date') { %>selected<% } %>>Event Date</option>
    </select>
  </form>

  <!-- Event Table -->
  <h2>Events</h2>
  <% if (events.length === 0) { %>
    <p>No events found.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Date</th>
          <th>Location</th>
          <th>Description</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% events.forEach(event => { %>
          <tr data-id="<%= event._id %>">
            <td>
              <form class="edit-form" action="/events/<%= event._id %>?_method=PUT" method="POST">
                <input type="text" name="title" value="<%= event.title %>" readonly>
            </td>
            <td>
                <input type="date" name="date" value="<%= event.date ? event.date.toISOString().split('T')[0] : '' %>" readonly>
            </td>
            <td>
                <input type="text" name="location" value="<%= event.location %>" readonly>
            </td>
            <td>
                <textarea name="description" readonly><%= event.description %></textarea>
            </td>
            <td>
                <button type="button" class="edit-btn">Edit</button>
                <button type="submit" class="update-btn" style="display:none;">Update</button>
                <button type="button" class="cancel-btn" style="display:none;">Cancel</button>
              </form>
              
              <!-- Delete button outside of edit form -->
              <form action="/events/<%= event._id %>?_method=DELETE" method="POST" style="display:inline;">
                <button type="submit">Delete</button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>

  <script>
    document.querySelectorAll('tr').forEach(row => {
      const editBtn = row.querySelector('.edit-btn');
      const updateBtn = row.querySelector('.update-btn');
      const cancelBtn = row.querySelector('.cancel-btn');
      const inputs = row.querySelectorAll('input, textarea');

      if(editBtn){
        editBtn.addEventListener('click', () => {
          inputs.forEach(input => input.removeAttribute('readonly'));
          editBtn.style.display = 'none';
          updateBtn.style.display = 'inline';
          cancelBtn.style.display = 'inline';
        });

        cancelBtn.addEventListener('click', () => {
          // Reset values to original using defaultValue
          inputs.forEach(input => {
            if(input.tagName === 'INPUT' && input.type === 'date'){
              input.value = input.defaultValue;
            } else if(input.tagName === 'INPUT'){
              input.value = input.defaultValue;
            } else {
              input.value = input.textContent;
            }
            input.setAttribute('readonly', true);
          });
          editBtn.style.display = 'inline';
          updateBtn.style.display = 'none';
          cancelBtn.style.display = 'none';
        });
      }
    });
  </script>
</body>
</html>
